<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout 
        android:id="@+id/perssonal_app_img_layout"
        android:layout_width="@dimen/video_bg_width"
        android:layout_height="@dimen/video_bg_height"
        android:layout_centerVertical="true"
         android:background="@drawable/video_bg"
        android:layout_marginLeft="@dimen/margin_left">
       
        <ImageView
            android:id="@+id/personal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
			android:layout_centerInParent="true"  />

         <ImageView 
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/person_good"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/personal_app_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/perssonal_app_img_layout">
            <TextView 
                android:id="@+id/personal_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/person_head_edit_margin_top"
                android:text="作品文字"
                android:maxLength="8"
                android:textSize="@dimen/LargerTextSize"/>
            <TextView 
                android:id="@+id/personal_app_feature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_app_title"
                android:layout_marginLeft="@dimen/person_head_edit_margin_top"
                android:textSize="@dimen/SmallTextSize"
                android:text="特点："/>
            <TextView 
                android:id="@+id/personal_app_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/personal_app_feature_title"
                android:layout_below="@id/personal_app_title"
                android:textSize="@dimen/SmallTextSize"
                android:text="无"/>
            <TextView 
                android:id="@+id/personal_app_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_app_feature_title"
                android:textSize="@dimen/SmallTextSize"
                android:layout_marginLeft="@dimen/person_head_edit_margin_top"
                android:text="来源："/>
            <TextView 
                android:id="@+id/personal_app_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/personal_app_from_title"
                android:layout_below="@id/personal_app_feature_title"
                android:textSize="@dimen/SmallTextSize"
                android:text="无"/>
            <Button 
                android:id="@+id/check_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:visibility="gone"
                android:layout_below="@id/personal_app_from_title"
                android:layout_marginLeft="@dimen/person_head_edit_margin_top"
                />
        </RelativeLayout>
</RelativeLayout>
